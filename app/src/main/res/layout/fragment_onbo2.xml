        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ellipse" />

    <ImageView
        android:id="@+id/eli5"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="40dp"
