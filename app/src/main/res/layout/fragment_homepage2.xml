<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.Homepage2Fragment">

    <RelativeLayout
        android:id="@+id/navigation_"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/segmentsContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/segment_1"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp">

                <RelativeLayout
                    android:id="@+id/icon_contai"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:clipToOutline="true">

                    <RelativeLayout
                        android:id="@+id/checkIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true">

                        <ImageButton
                            android:id="@+id/icon_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/fichecksquare" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/home"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/home"
                    android:textAppearance="@style/home"
                    android:translationY="-2.74sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/segment_2"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/segment_1">

                <RelativeLayout
                    android:id="@+id/paw_icon"
                    android:layout_width="64dp"
                    android:layout_height="32dp">

                    <RelativeLayout
                        android:id="@+id/paw_container"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true">

                        <ImageButton
                            android:id="@+id/paw_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/paw" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/paw"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/discover"
                    android:textAppearance="@style/discover"
                    android:translationY="-2.74sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mdaddcircle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/segment_2"
                android:background="@drawable/mdaddcircle" />

            <RelativeLayout
                android:id="@+id/segment_4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/mdaddcircle">

                <RelativeLayout
                    android:id="@+id/body_icon"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:clipToOutline="true">

                    <RelativeLayout
                        android:id="@+id/body_container"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true">

                        <ImageButton
                            android:id="@+id/body_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/iobodysharp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/community"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/community2"
                    android:textAppearance="@style/community"
                    android:translationY="-2.74sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/segment_5"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/segment_4">

                <RelativeLayout
                    android:id="@+id/profile_icon"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:clipToOutline="true">

                    <RelativeLayout
                        android:id="@+id/profile_container"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true">

                        <ImageButton
                            android:id="@+id/profile_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ioperson" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/profile"
                    android:textAppearance="@style/profile"
                    android:translationY="-2.74sp" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/tracker_view"
        android:layout_width="436dp"
        android:layout_height="317dp"
        android:layout_marginBottom="372dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/tracker" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="19dp"
        android:text="@string/upcoming_to"
        android:textAppearance="@style/upcoming_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tracker_view" />

    <Button
        android:id="@+id/new_button"
        android:layout_width="81dp"
        android:layout_height="43dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="35dp"
        android:background="@color/orange_100"
        android:text="+  New"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/navigation_"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>